@model IEnumerable<_0731Project.Models.ItemDb>
@{
    ViewBag.Title = "Index";
}

<div class="container pt-5">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/carousel_1.jpg" width="1100" height="500">
            </div>
            <div class="carousel-item">
                <img src="~/images/carousel_2.jpg" width="1100" height="500">
            </div>
            <div class="carousel-item">
                <img src="~/images/carousel_3.jpg" width="1100" height="500">
            </div>
            <div class="carousel-item">
                <img src="~/images/carousel_4.jpg" width="1100" height="500">
            </div>
        </div>
    </div>
</div>
<section class="service py-lg-4 py-md-3 py-sm-3 py-3" id="service">
    <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-6">
                    <div class="ser-fashion-wthree">
                        <figure class="snip1504">
                            <img class="mx-auto d-block" src="~/images/@item.ItemImg" alt="sample57" />
                            <figcaption>
                                <h3 style="font-size:30px;color:lightseagreen">熱賣商品</h3>
                                <h5 class="mt-3" style="font-size:24px">@item.Slogen2</h5>
                            </figcaption>
                        </figure>
                    </div>
                        <div style="text-align: center"><button type="submit" class="btn1 snip1189"><b>@item.ItemName<br>NT$@item.ItemUnitPrice</b></button></div>
                </div>
            }           
        </div>

    </div>

</section>

<script>
    /* Demo purposes only */
    $(".hover").mouseleave(
        function () {
            $(this).removeClass("hover");
        }
    );

    $(document).ready(function () {
        $("html").click(function () {
            window.location.replace("../Home/Product");
        });
    });
</script>
