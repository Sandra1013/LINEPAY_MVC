@model IEnumerable<_0731Project.Models.EmpDb>
@{
    ViewBag.Title = "Index";
    
}

<div class="row">
    <div class="col-md-8">
        <h2>年銷售分析</h2>
        <canvas id="canvas-line"></canvas>
    </div>
    <div class="col-md-4">
        <h2>月銷售分析</h2>
        <canvas id="canvas-pie"></canvas>
    </div>
</div>

<hr />
<div class="row">

    <div class="col-md-8">

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>員工編號</th>
                        <th>姓名</th>
                        <th>今日狀態</th>
                        <th>目前進度</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.EmployeeID</td>
                            @if (item.Permission == 1)
                            {
                                <td><span class="label label-danger">@item.UserName</span></td>
                            }
                            else
                            {
                                <td><span class="label label-primary" >@item.UserName</span></td>
                            }
                            @if (item.Assignment == 1)
                            {
                                <td><span class="label label-success">上班</span></td>
                            }
                            else
                            {
                                <td><span class="label label-default">請假</span></td>
                            }

                            <td>第 @item.MachineId 機臺補貨中</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.js"></script>




<script type="text/javascript">

    //圓餅圖
    
    var labels = ["可口可樂", "美麗果", "雪碧"];
    var ctxPie = document.getElementById('canvas-pie').getContext('2d');
    var pieChart = new Chart(ctxPie, {
        type: 'pie',
        data: {
            labels: labels,
            datasets: [{
                //預設資料
                data: [41, 37, 22],
                backgroundColor: [
                    //資料顏色
                    "#FF0000",
                    "#FFFF00",
                    "#4169E1"
                ],
                borderColor: [
                    "#FFFFFF",
                    "#FFFFFF",
                    "#FFFFFF"
                ],
            }],
        }
    });


    //線性圖
    var lineChartData = {
        labels: ["1月", "2月", "3月", "4月", "5月", "6月", "7月", "8月", "9月", "10月", "11月", "12月"], //顯示區間名稱
        datasets: [{
            label: '可口可樂', // tootip 出現的名稱
            lineTension: 0, // 曲線的彎度，設0 表示直線
            backgroundColor: "#FFFFFF",//"#ea464d"
            borderColor: "#FF0000",
            borderWidth: 5,
            data: [60, 78, 55, 49, 66, 63, 61, 60, 77, 45, 51, 62], // 資料
            fill: false // 是否填滿色彩
        }, {
            label: '美麗果',
            lineTension: 0,
            backgroundColor: "#FFFFFF",
            borderColor: "#FFFF00",
            borderWidth: 5,
            data: [37, 35, 36, 48, 52, 39, 62, 51, 47, 33, 55, 44],
            fill: false
        },
        {
            label: '雪碧',
            lineTension: 0,
            backgroundColor: "#FFFFFF",
            borderColor: "#4169E1",
            borderWidth: 5,
            data: [18, 14, 18, 20, 29, 15, 23, 39, 11, 34, 48, 33],
            fill: false
        },]
    };

    function drawLineCanvas(ctxLine, data) {
        window.myLine = new Chart(ctxLine, {  //先建立一個 chart
            type: 'line', // 型態
            data: data,
            options: {
                responsive: true,
                legend: { //是否要顯示圖示
                    display: true,
                },
                tooltips: { //是否要顯示 tooltip
                    enabled: true
                },
                scales: {  //是否要顯示 x、y 軸
                    xAxes: [{
                        display: true
                    }],
                    yAxes: [{
                        display: true
                    }]
                },
            }
        });
    };

    window.onload = function () {
        var ctxLine = $("#canvas-line")[0].getContext("2d");
        //var ctx = document.getElementById("canvas-line").getContext("2d");
        drawLineCanvas(ctxLine, lineChartData);
    };

</script>
